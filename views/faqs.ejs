        <link href="/css/derive.css" rel="stylesheet">
      
</head>

<body>

  <!-- NavBar -->
  <%- include partials/navbar.ejs %>


<!-- FAQs Content -->
<div class="container pt-5">
    <div class="row">
      <div class="col-lg-6">
          <div class="header-title">
              <h1 class="wv-heading--title">
                  ¿Dudas? Te contamos más sobre Derivé
              </h1>
              <h2 class="wv-heading--subtitle">
                  Si tenés dudas sobre nuestros servicios y experiencias, por favor lee atentamente las siguientes preguntas frecuentes.
              </h2>
              </div>
      </div>

      <div class="col-lg-6" style="margin: 2rem 0;">
          <div class="accordion" id="faqsAccordion">
            <% faqs.forEach( (faq) => { %>
            <div class="card">
              <div class="card-header" id="<%= faq.id %>"> <!-- El ID "headingOne" debiera ser reemplazado por el ID de la pregunta -->
                <h2 class="mb-0">
                  <button class="btn btn-link faq-btn" type="button" data-toggle="collapse" data-target="#collapse<%= faq.id %>" aria-expanded="true" aria-controls="collapseOne">
                    <%= faq.name %>
                  </button>
                </h2>
                <hr>
              </div>

              <div id="collapse<%= faq.id %>" class="collapse" aria-labelledby="<%= faq.id %>" data-parent="#faqsAccordion"><!-- El aria-labelledby "headingOne" debiera ser reemplazado por el valor del ID de la pregunta, para coincidir con el ID del -->
                <div class="card-body">
                  <%= faq.response %>
                </div>
              </div>
            </div>
            <% }) %>
          </div>    
      </div>
    </div>
</div>

  <!-- Footer -->
  <%- include partials/footer.ejs %>

</body>

</html>
